<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LogActivity">

    <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:name="com.taurilogs.app.ui.ToolbarFragment"
            android:id="@+id/toolbarFragmentLog"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarFragmentLog">
        <TableLayout
                android:id="@+id/table_layout"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="2dp"
                android:showDividers="middle"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                    android:paddingRight="?android:attr/expandableListPreferredChildPaddingLeft">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameHeader"
                        android:text="@string/name_header"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingEnd="10dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dpsHeader"
                        android:text="@string/dps_header"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingEnd="10dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/hpsHeader"
                        android:text="@string/hps_header"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</RelativeLayout>
